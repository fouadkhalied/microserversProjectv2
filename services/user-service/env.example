# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=user_service
DB_SSLMODE=disable

# Alternative: Use DATABASE_URL instead of individual DB_* variables
# DATABASE_URL=host=localhost user=postgres password=postgres dbname=user_service port=5432 sslmode=disable

# Database Connection Pool Settings
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Alternative: Use REDIS_URL instead of individual REDIS_* variables
# REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://username:password@redis-cloud-host:port

# JWT Configuration
JWTSECRETKEY=your-super-secret-jwt-key-change-this-in-production

# Email Service (SendGrid)
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_SENDER=your-email@domain.com

# Server Configuration
TCP_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=5

# OTP Configuration
OTP_EXPIRY=5m
OTP_LENGTH=6

# Cache Configuration
CACHE_TTL_TOKEN=24h
CACHE_TTL_PROFILE=24h
CACHE_TTL_OTP=5m
CACHE_TTL_USER_DATA=15m
